<div class="container">
  <%= link_to "All experiences", root_path %>
  <h2>Booking confirmed</h2>
  <h1><%= @booking.experience.title %></h1>
  <div class="row">
    <div class="mb-2">
      <% if @booking.experience.photos.attached? %>
          <% @booking.experience.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 600, crop: :fill %>
          <% end %>
      <% else %>
          <%= cl_image_tag("vhdtrwmulsvwsvrhkatw", width: 400, height: 300, crop: :fill) %>
      <% end %>
  </div>
  <div class="row my-2">
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= @booking.experience.title %> <span class="text-muted font-weight-normal"><i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= @booking.experience.description.first(30) %>...</small>
              <div class="d-flex align-items-end justify-content-between pt-4">
                <i class="fas fa-quote-left mr-2"></i><small class="flex-grow-1"><%= @booking.experience.price %></small>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="card-booking d-flex flex-column">
            <div class="m-2 p-2 d-flex justify-content-between">
              <div>
                <p>25.05.2021</p>
                <p><%= @booking.experience.duration %> hours</p>
                <p>2 guests</p>
              </div>
            </div>
            <%# if policy(@experience).edit? %>
              <div class="m-2  p-2 d-flex border-top justify-content-between">
                <!-- <p>Host:</p> -->
                <%#= link_to "Edit", edit_experience_path(@experience), class: 'btn btn-secondary' %>
              </div>
            <%# end %>
          </div>
        </div>
      </div>
  </div>
</div>

