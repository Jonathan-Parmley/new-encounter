<div class="container">
  <%= link_to "All experiences", root_path %>
  <h1><%= @experience.title %></h1>
  <div class="row">
    <div class="mb-2">
      <% if @experience.photos.attached? %>
          <% @experience.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 600, crop: :fill %>
          <% end %>
      <% else %>
          <%= cl_image_tag("vhdtrwmulsvwsvrhkatw", width: 400, height: 300, crop: :fill) %>
      <% end %>
  </div>
  <div class="row my-2">
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= @experience.title %> <span class="text-muted font-weight-normal"><i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= @experience.description %></small>
              <div class="d-flex align-items-end justify-content-between pt-4">
                <small class="flex-grow-1"> â‚¬ <%= @experience.price %></small>
              </div>
              <% if policy(@experience).edit? %>
                <small class="text-right flex-shrink-0"><%= link_to 'delete', experience_path(@experience), method: :delete, data: { confirm: "Are you sure you want to remove #{@experience.title}"}, class: 'text-danger' %></small>
             <% end %>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="card-booking d-flex flex-column">
            <div class="m-2 p-2 d-flex justify-content-between">
              <% if policy(@experience).edit? != true %>
              <div>
                <p>25th May</p>
              </div>
              <div>
                <%= link_to "Book", new_experience_booking_path(@experience), class: 'btn btn-primary' %>
              </div>
              <% end %>
            </div>
            <% if policy(@experience).edit? %>
              <div class="m-2  p-2 d-flex border-top justify-content-between">
                <p>Host:</p>
                <%= link_to "Edit", edit_experience_path(@experience), class: 'btn btn-secondary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>

