<div class="border-top d-flex align-content-center">
  <div class="mt-4 d-flex flex-wrap">
    <% @experiences.each do |experience| %>
      <%= link_to experience_path(experience), class:"card-link" do %>

        <div class="m-4">

          <div class="card-experience">
            <% if experience.photos.attached? %>
              <%= cl_image_tag experience.photos.first.key, height: 400, width: 300, crop: :fill %>
            <% end %>
            <div class="top-left">
              <span class="badge badge-light p-2">ONLINE</span>
            </div>
          </div>


          <div class="card-experience-infos d-flex flex-column mt-2">
            <div>
              <p><%= experience.location %></p>
              <h2><%= experience.title %></h2>
            </div>
            <div class="mt-2">
              <h2 class="card-experience-pricing">From â‚¬ <%= experience.price %> / person</h2>
            </div>
          </div>

        </div>

      <% end %>
    <% end %>
  </div>
</div>



